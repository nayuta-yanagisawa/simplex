--source include/have_innodb.inc

--connect (local, localhost, root, , , $LOCAL_MYPORT, $LOCAL_MYSOCK)
--connect (remote, localhost, root, , , $REMOTE_MYPORT, $REMOTE_MYSOCK)

--connection local
INSTALL PLUGIN simplex SONAME 'ha_simplex.so';

CREATE TABLE t (
    c INT
) ENGINE=SIMPLEX REMOTE_USER='root' REMOTE_PASSWORD='';
SHOW CREATE TABLE t;

--connection remote
CREATE TABLE t (c INT) ENGINE=InnoDB;
INSERT INTO t VALUES (1), (2), (3);

--connection local
SELECT * FROM t;

BEGIN;
SELECT * FROM t WHERE c = 1;
SELECT * FROM t WHERE c = 2;
SELECT * FROM t WHERE c = 3;
COMMIT;

# Cleanup
--connection local
DROP TABLE t;

UNINSTALL PLUGIN simplex;

--connection remote
DROP TABLE t;
